# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Spring Profile (dev, prod, test)
SPRING_PROFILE=mysql

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/english_db
DB_USERNAME=root
DB_PASSWORD=your_database_password

# JWT Configuration
JWT_SECRET=YourVerySecureSecretKeyThatShouldBeAtLeast256BitsLongForHS256AlgorithmInProduction
JWT_EXPIRATION=86400000

# CORS Configuration (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,https://yourdomain.com

# JPA Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true

# Server Configuration (optional)
SERVER_PORT=8080
